{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="myFormLogin">
        <form action="{{ path('user.validFormupdateAdmin') }}" method="post">
            <div class="sign-in-form">
                <h4 class="text-center">Modifier mon compte</h4>
                <div class="large-6 small-12 columns">
                    <label for="login">Nom d'utilisateur</label>
                    <input style="border-radius: 12px 12px 12px 12px;" type="text" name="login" id="username" value="{{donnees.login|default("")}}" class="sign-in-form-username"/>
                    {% if erreurs.login is defined %}
                        <small class="error">{{erreurs.login}}</small>
                    {% endif %}
                    <label>Role :
                        <select name="role">
                            <option value="ROLE_ADMIN" {% if donnees.role is defined and donnees.role=="ROLE_ADMIN" %} selected {% endif %}>ROLE_ADMIN</option>
                            <option value="ROLE_CLIENT" {% if donnees.role is defined and donnees.role=="ROLE_CLIENT" %} selected {% endif %}>ROLE_CLIENT</option>
                            <option value="ROLE_INVITE" {% if donnees.role is defined and donnees.role=="ROLE_INVITE" %} selected {% endif %}>ROLE_INVITE</option>
                            <option value="ROLE_VENDEUR" {% if donnees.role is defined and donnees.role=="ROLE_VENDEUR" %} selected {% endif %}>ROLE_VENDEUR</option>

                        </select>
                    </label>
                    {% if erreurs.role is defined %}
                        <small class="error">{{erreurs.role}}</small>
                    {% endif %}

                    <input style="border-radius: 12px 12px 12px 12px;" type="hidden" name="id" id="id" value="{{donnees.id|default("")}}" class="id_modifier"/>
                </div>

                <input type="submit" name="update" class="update" value="Modifier"/>

            </div>
        </form>
    </div>
{% endblock %}