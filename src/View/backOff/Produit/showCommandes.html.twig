{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="row">
        <table>
            <caption>Recapitulatifs des commandes (avec twig)</caption>
            <thead>
            <tr><th>user_id</th><th>prix</th><th>date_achat</th><th>etat_id</th>
                {% if   app.session.get('roles') is not defined or  app.session.get('roles') != 'ROLE_ADMIN' %}
                    <th>
                        modifier
                    </th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for commandes in data if data is not empty %}
                <tr>
                    <td>{{commandes.user_id}}</td><td>{{commandes.prix}}</td><td>{{commandes.date_achat}}</td><td>
                        {{commandes.etat_id}}</td>
                        {% if   app.session.get('roles') is not defined or  app.session.get('roles') != 'ROLE_ADMIN' %}
                    <td>
                        <a href="{{ path('commande.remove', {id: produit.id}) }}">supprimer</a>
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}