{% extends "layout.html.twig" %}
{% block contenu %}
<div style="margin-top: 20px;">
    <a href="{{ path('produit.addProduit') }}"> Ajouter un produit </a>
    <div class="row">
        <table>
            <caption>Recapitulatifs des armes</caption>
            <thead>
            <tr><th>nom</th><th>id</th><th>type</th><th>prix</th><th>nom photo</th><th>photo</th><th>action</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in data if data is not empty %}
                <tr>
                    <td>{{produit.nom}}</td><td>{{produit.id}}</td><td>{{produit.libelle}}</td><td>{{produit.prix}}</td><td>
                        {{produit.photo}}</td><td>
                        <img src="{{asset('images/')}}{{produit.photo}}" alt="image de {{produit.libelle}}" width="100" height="100" >
                    </td>
                    <td>
                        <a href="{{ path('produit.editProduit', {id: produit.id}) }}">modifier</a>
                        <a href="{{ path('produit.deleteProduit', {id: produit.id}) }}">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}

