{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="row">
        <table>
            <caption>Recapitulatifs des produits (avec twig)</caption>
            <thead>
            <tr><th>nom</th><th>id</th><th>type</th><th>prix</th><th>nom photo</th><th>photo</th><th>ajouter</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in data if data is not empty %}
                <tr>
                    <td>{{produit.id}}</td><td>{{panier.quantite}}</td><td>{{panier.prix}}</td><td>
                        {{panier.dateAjoutPanier}}</td><td>
                        <img style="width:40px;height:40px" src="{{asset('images/')}}{{panier.photo}}" alt="image de {{panier.libelle}}" >
                    </td>
                    <td>
                        <a href="{{ path('panier.remove', {id: panier.id}) }}">supprimer du panier</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}